<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuizTestCategoryActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_turk_kitchen"
            android:onClick="categoryOnClick"
            android:padding="50dp"
            android:background="#FF9800"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Türk Mutfağı"/>

        <TextView
            android:id="@+id/txt_world_kitchen"
            android:onClick="categoryOnClick"
            android:padding="50dp"
            android:background="@android:color/holo_green_light"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Dünya Mutfağı"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_capital"
            android:onClick="categoryOnClick"
            android:padding="50dp"
            android:background="@android:color/holo_purple"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Başkentler"/>
        <TextView
            android:id="@+id/txt_plaka"
            android:onClick="categoryOnClick"
            android:padding="50dp"
            android:background="@android:color/holo_red_light"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Plaka Kodları"/>



    </LinearLayout>



    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_spor"
            android:onClick="categoryOnClick"
            android:padding="50dp"
            android:background="#2196F3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Spor"/>

        <TextView
            android:id="@+id/txt_history"
            android:onClick="categoryOnClick"
            android:padding="50dp"
            android:background="#836967"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Tarih"/>

    </LinearLayout>


    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_cografya"
            android:onClick="categoryOnClick"
            android:padding="50dp"
            android:background="#C50A4A"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Coğrafya"/>

        <TextView
            android:id="@+id/txt_believe"
            android:onClick="categoryOnClick"
            android:padding="50dp"
            android:background="#FFEB3B"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="İnanışlar"/>

    </LinearLayout>



</LinearLayout>