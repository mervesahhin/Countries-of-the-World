<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Main3Activity">

    <Button
        android:id="@+id/btnUlkeTanı"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:text="Ülkeleri Tanı"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnHarita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTurkiyeTani"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnTurkiyeTani"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:text="Türkiyeyi Tanı"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBayrakTani"
        app:layout_constraintEnd_toStartOf="@+id/btnUlkeTanı"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPuan"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnBayrakTani"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:text="Bayrakları Tanı"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/btnUlkeQuiz"
        app:layout_constraintEnd_toStartOf="@+id/btnHarita"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTurkiyeTani" />

    <Button
        android:id="@+id/btnHarita"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:text="Harita"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBayrakQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBayrakTani"
        app:layout_constraintTop_toBottomOf="@+id/btnUlkeTanı"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnUlkeQuiz"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorAccent"
        android:text="ülkeler şehirler quiz"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBayrakQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBayrakTani"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnBayrakQuiz"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorAccent"
        android:text="bayrak Quiz"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnUlkeQuiz"
        app:layout_constraintTop_toBottomOf="@+id/btnHarita"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtPuan"
        android:layout_width="210dp"
        android:layout_height="136dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="31dp"
        android:text="PUANINIZ : 0"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTurkiyeTani"
        app:layout_constraintEnd_toEndOf="@+id/btnUlkeTanı"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>