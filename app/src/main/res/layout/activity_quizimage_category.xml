<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuizImageCategoryActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_flag2"
            android:onClick="imageCategoryOnClick"
            android:padding="50dp"
            android:background="#0C2CDA"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Bayraklar"/>

        <TextView
            android:id="@+id/txt_traditional2"
            android:onClick="imageCategoryOnClick"
            android:padding="50dp"
            android:background="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="KÄ±yafetler"/>

    </LinearLayout>

</LinearLayout>