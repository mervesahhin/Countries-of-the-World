<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".BayrakQuizResultActivity">

    <TextView
        android:id="@+id/txtYuzde"
        android:layout_width="298dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:text="Puan: 0"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTekrarDene"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSonuc" />

    <TextView
        android:id="@+id/txtSonuc"
        android:layout_width="298dp"
        android:layout_height="0dp"
        android:layout_marginTop="375dp"
        android:layout_marginBottom="12dp"
        android:text="5 DOĞRU 1 YANLIŞ"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtYuzde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTekrarDene"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_marginBottom="53dp"
        android:background="@color/colorAccent"
        android:text="tekrar dene"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtYuzde" />
</androidx.constraintlayout.widget.ConstraintLayout>